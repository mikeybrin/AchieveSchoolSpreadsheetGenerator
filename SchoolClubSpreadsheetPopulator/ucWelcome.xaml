<UserControl x:Class="SchoolClubSpreadsheetPopulator.ucWelcome"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchoolClubSpreadsheetPopulator"
             mc:Ignorable="d">
        <StackPanel>
        <Label x:Name="txtTitle" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="42" FontFamily="Centaur" Height="55" Content="Achieve Club Speadsheet Generator" Foreground="#FFCC0033"></Label>
        <Button Click="btnGeneration_Click" x:Name="btnGeneration" Content="Begin generation" VerticalAlignment="Center" Padding="5" Margin="0 20" Background="#FFCC0033" Foreground="White" Width="250"  FontSize="12">
            <Button.Effect>
                <DropShadowEffect Opacity="0.25"/>
            </Button.Effect>
        </Button>
    </StackPanel>
</UserControl>
